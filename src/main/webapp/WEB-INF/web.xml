<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <display-name>Archetype Created Web Application</display-name>
    
    <servlet>
        <servlet-name>AdminLogInServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.AdminLogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLogInServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPageServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.AdminStartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPageServlet</servlet-name>
        <url-pattern>/admin-page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminControlPanelServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.AdminControlPanelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminControlPanelServlet</servlet-name>
        <url-pattern>/admin-panel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminCreateServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.AdminCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCreateServlet</servlet-name>
        <url-pattern>/admin-create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminEditServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.AdminEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminEditServlet</servlet-name>
        <url-pattern>/admin-edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDeleteServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.AdminDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteServlet</servlet-name>
        <url-pattern>/admin-delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ModeratorPageServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.moderator.ModeratorPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModeratorPageServlet</servlet-name>
        <url-pattern>/moderator/page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModeratorEditServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.moderator.ModeratorEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModeratorEditServlet</servlet-name>
        <url-pattern>/moderator/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserViewServlet</servlet-name>
        <servlet-class>com.gmail.andreyzarazka.servlets.user.UserViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserViewServlet</servlet-name>
        <url-pattern>/meloman</url-pattern>
    </servlet-mapping>
</web-app>
